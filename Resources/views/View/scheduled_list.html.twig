{% set sectionName = 'scheduled' %}

{% extends 'MarkupJobQueueBundle::layout.html.twig' %}

{% block content %}
{{ parent() }}

<h2>Scheduled Jobs</h2>
<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Date</th>
        <th>Count</th>
    </tr>
    </thead>
    <tbody>
    {% for timestamp in timestamps %}
        <tr>
            <th class="span2">
                <a href="{{ path('markup_admin_job_queue_scheduled_timestamp', {timestamp: timestamp[0]}) }}">
                    {{ timestamp[0]|date('Y-m-d H:i:s') }}</a>
            </th>
            <td class="span1">{{ timestamp[1] }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
