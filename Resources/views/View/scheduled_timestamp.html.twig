{% extends 'PhoenixJobQueueBundle::layout.html.twig' %}

{% block content %}
{{ parent() }}

    <h2>Jobs Scheduled for {{ timestamp|date('Y-m-d H:i:s') }}</h2>
    <p><a href="{{ path('phoenix_admin_job_queue_scheduled_list') }}">Back to all Scheduled Jobs</a></p>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Job</th>
            <th>Details</th>
        </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <th class="span1">{{ loop.index }}</th>
                <td class="span11">
                    <pre>{{ job }}</pre>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
