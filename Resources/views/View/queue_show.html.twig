{% extends 'MarkupJobQueueBundle::layout.html.twig' %}

{% block content %}
{{ parent() }}

<h3>Queue "{{ queue.name }}"</h3>
{% include "BCCResqueBundle:Default:_miniPager.html.twig" %}
<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Args</th>
    </tr>
    </thead>
    <tbody>
    {% for job in jobs %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ job.name }}</td>
            <td><pre>{{ job.args | json_encode(constant('JSON_PRETTY_PRINT'))|raw}}</pre></td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">
                <em>empty...</em>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
